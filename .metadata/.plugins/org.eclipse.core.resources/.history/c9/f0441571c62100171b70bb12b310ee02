import java.util.Arrays;;

public class Cola<T> {
	
	// ATRIBUTOS
	//private T[] elementos;
	
	// CONSTRUCTOR VACÍO
	  private int tamanio = 0;
      private static final int CAPACIDAD_DEFECTO = 10;
      private Object elementos[];

      public Cola() {
              elementos = new Object[CAPACIDAD_DEFECTO];
      }

      public void push(T element) {
          if (tamanio == elementos.length) {
                  asegurarCapa();													//Para asegurar una capacidad duplicada 
          }
          elementos[tamanio++] = element;
  }
      
    //MÉTODOS
      private void asegurarCapa() {
            int nuevoTamanio = elementos.length * 2;
            elementos = Arrays.copyOf(elementos, nuevoTamanio);						//Se hace un trasvase a una nueva asign de memoria con la doble de capacidad y se vuelca la info destruiyendo la info anterior del tamaño antiguo
      }
      
      
	    
	
	
      

      }
